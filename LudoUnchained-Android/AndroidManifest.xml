<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appspot.ludounchained"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.appspot.ludounchained.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.appspot.ludounchained.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name="com.appspot.ludounchained.LudoUnchainedApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Ludounchained" >
        <activity
            android:name="com.appspot.ludounchained.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Ludounchained.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appspot.ludounchained.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.appspot.ludounchained.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>

        <service android:name="com.appspot.ludounchained.endpoint.GCMIntentService" />

        <receiver
            android:name="com.appspot.ludounchained.endpoint.GCMReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.appspot.ludounchained" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.appspot.ludounchained" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.appspot.ludounchained.LobbyBrowserActivity"
            android:label="@string/title_activity_lobby_browser" >
        </activity>
        <activity
            android:name="com.appspot.ludounchained.GameActivity"
            android:label="@string/title_activity_game"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="com.appspot.ludounchained.HighScoreActivity"
            android:label="@string/title_activity_high_score" >
        </activity>
    </application>

</manifest>
