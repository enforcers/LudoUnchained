<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GameActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="242dp"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/game_playername_red"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/game_playername_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
            
	    <GridView
	        android:id="@+id/game_field"
	        android:layout_width="242dp"
	        android:layout_height="242dp"
	        android:background="@drawable/board"
	        android:columnWidth="@dimen/game_field_size"
	        android:numColumns="11" />
	    
        <RelativeLayout
            android:layout_width="242dp"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/game_playername_yellow"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/game_playername_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/roll_dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="rollDice"
        android:src="@drawable/dice3droll" />

</RelativeLayout>