<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:background="@drawable/lobby_row_selector"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/lobby_row_name"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textAppearance="@style/TextDark.Big" />

 	<ImageView
	    android:id="@+id/lobby_meeple_red"
	    android:layout_below="@+id/lobby_row_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    style="@style/PlayerMeeple"
	    android:contentDescription="@string/dummy"
	    android:src="@drawable/meeple_red" />

  	<ImageView
	    android:id="@+id/lobby_meeple_blue"
	    android:layout_below="@+id/lobby_row_name"
	    android:layout_alignParentRight="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    style="@style/PlayerMeeple"
	    android:contentDescription="@string/dummy"
	    android:src="@drawable/meeple_blue" />
	
  	<ImageView
	    android:id="@+id/lobby_meeple_yellow"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/lobby_meeple_red"
	    android:layout_marginTop="5dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    style="@style/PlayerMeeple"
	    android:contentDescription="@string/dummy"
	    android:src="@drawable/meeple_yellow" />

  	<ImageView
	    android:id="@+id/lobby_meeple_green"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/lobby_meeple_blue"
	    android:layout_marginTop="5dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    style="@style/PlayerMeeple"
	    android:contentDescription="@string/dummy"
	    android:src="@drawable/meeple_green" />

  	<TextView
	    android:id="@+id/lobby_player_red"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/lobby_meeple_red"
	    android:layout_toRightOf="@+id/lobby_meeple_red"
	    android:layout_marginLeft="5dp"
	    android:textAppearance="@style/TextLight"
	    android:text="@string/lobby_player_none" />
  	
	<TextView
	    android:id="@+id/lobby_player_blue"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/lobby_meeple_blue"
	    android:layout_toLeftOf="@+id/lobby_meeple_blue"
	    android:layout_marginRight="5dp"
	    android:textAppearance="@style/TextLight"
	    android:text="@string/lobby_player_none" />

	<TextView
	    android:id="@+id/lobby_player_green"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/lobby_meeple_green"
	    android:layout_toLeftOf="@+id/lobby_meeple_green"
	    android:layout_marginRight="5dp"
	    android:textAppearance="@style/TextLight"
	    android:text="@string/lobby_player_none" />

	<TextView
	    android:id="@+id/lobby_player_yellow"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/lobby_meeple_yellow"
	    android:layout_toRightOf="@+id/lobby_meeple_yellow"
	    android:layout_marginLeft="5dp"
	    android:textAppearance="@style/TextLight"
	    android:text="@string/lobby_player_none" />

	<ImageView
	    android:id="@+id/lobby_state"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:contentDescription="@string/dummy" />

</RelativeLayout>