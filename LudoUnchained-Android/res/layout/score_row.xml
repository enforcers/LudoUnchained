<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:background="@drawable/lobby_row_selector"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    
    <TextView
        android:id="@+id/score_row_place"
        android:layout_width="25dip"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:textAppearance="@style/TextDark.Big" />
    
	<TextView
	    android:id="@+id/score_row_player"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_marginBottom="10dp"
	    android:layout_toRightOf="@id/score_row_place"
	    android:textAppearance="@style/TextDark.Big" />
	
	<TextView
        android:id="@+id/score_row_score"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/score_row_player"
        android:textAppearance="@style/TextDark.Big" />

</RelativeLayout>